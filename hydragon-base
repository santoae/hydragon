# Start with an Ubuntu base image
FROM ubuntu:latest

# Update image with latest
RUN apt-get update && apt-get upgrade -y

# Install git make and wget
RUN apt-get install git make wget unzip -y

# Install golang version 1.20
RUN wget https://go.dev/dl/go1.20.14.linux-arm64.tar.gz && \
        tar -C /usr/local -xzf go1.20.14.linux-arm64.tar.gz
		
# Add Go to PATH
ENV PATH="/usr/local/go/bin:${PATH}"		

# Clone Hydragon Github Repository
RUN git clone https://github.com/Hydra-Chain/hydragon-node && \
        cd hydragon-node && \
        CGO_ENABLED=0 GOOS=linux GOARCH=arm64 make build
		
# Generate secrets
CMD ["/hydragon-node/hydra", "secrets", "init", "--chain-id", "8844", "--data-dir", "node-secrets"]

# Generate secretManagerConfig
CMD ["/hydragon-node/hydra", "secrets", "generate", "--type", "encrypted-local", "--name", "node", "--extra", "coingecko-api-key=CG-u1DLVwABupFpcEcYUCz6jZnE"]

# Get genesis file form github
RUN wget https://github.com/Hydra-Chain/hydragon-node/releases/download/v1.0.0-rc.3/hydra-v1.0.0-rc.3-linux-amd64.zip
RUN unzip -j hydra-v1.0.0-rc.3-linux-amd64.zip hydra-v1.0.0-rc.3-linux-amd64/genesis.json
